<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin" 
        android:layout_marginTop="@dimen/score_margin" >
        <TextView
            android:id="@+id/playerName1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
			android:padding="@dimen/edit_text_padding"
			android:layout_marginRight="@dimen/right_margin"
			android:layout_gravity="center_vertical"
			android:textSize="@dimen/text_size" >
        </TextView>
        <ImageView
            android:id="@+id/playerImage1"
            android:layout_weight="1"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:padding="@dimen/image_padding"
            android:clickable="false"
            android:src="@drawable/red">
        </ImageView>
	</LinearLayout>
	
    <RatingBar android:id="@+id/playerScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/score_margin"
        android:isIndicator="true"
        android:numStars="@integer/max_score"
        android:layout_gravity="center">
    </RatingBar>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin"
        android:layout_marginTop="@dimen/score_margin">
        <TextView
            android:id="@+id/playerName2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
			android:padding="@dimen/edit_text_padding"
			android:layout_marginRight="@dimen/right_margin"
			android:layout_gravity="center_vertical"
			android:textSize="@dimen/text_size">
        </TextView>
        <ImageView
            android:id="@+id/playerImage2"
            android:layout_weight="1"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:padding="@dimen/image_padding"
            android:clickable="false"
            android:src="@drawable/green">
        </ImageView>
	</LinearLayout>
	
    <RatingBar android:id="@+id/playerScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/score_margin"
        android:isIndicator="true"
        android:numStars="@integer/max_score"
        android:layout_gravity="center">
    </RatingBar>
    
    <Button android:id="@+id/start_button"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/start_button_height"
        android:width="@dimen/start_button_width"
        android:layout_marginTop="@dimen/start_button_topmargin"
        android:onClick="myClickHandler"
        android:text="@string/start_button_text"/>

</LinearLayout>
